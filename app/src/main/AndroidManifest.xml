<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rupeedesk"> <!-- Make sure this matches your build.gradle 'namespace' -->

    <!-- ðŸ” Core Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    
    <!--  boot permission -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- âš™ï¸ Foreground Service Permissions -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Required for Android 13 (API 33)+ to show notifications from the service -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- Required for Android 14 (API 34)+ for data sync services -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <!-- Optional: Permissions for reading/receiving SMS -->
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_MMS" />
    <uses-permission android:name="android.permission.RECEIVE_WAP_PUSH" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"> <!-- Make sure these resources exist -->

        <!-- ðŸ§­ Main Launcher Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- âš™ï¸ Background SMS Service -->
        <service
            android:name=".smsaautosender.SmsService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- ðŸ“© Sent/Delivery receiver -->
        <receiver 
            android:name=".smsaautosender.SmsSentReceiver" 
            android:exported="false" />

        <!-- ðŸ”„ Boot auto-start -->
        <receiver
            android:name=".smsaautosender.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- ðŸ“¥ Receive incoming SMS (Unused in current logic, but kept from original file) -->
        <receiver
            android:name=".smsaautosender.sms.SmsBroadcastReceiver"
            android:permission="android.permission.BROADCAST_SMS"
            android:exported="true">
            <intent-filter android:priority="2147483647"> <!-- High priority -->
                <action android:name="android.provider.Telephony.SMS_DELIVER" />
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </D:\Projects\SmsAutoSender\app\src\main\java\com\rupeedesk\smsaautosender\sms\SmsBroadcastReceiver.java
            </intent-filter>
        </receiver>
    </application>
</manifest>


