<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- ðŸ”‘ Bind User ID -->
    <EditText
        android:id="@+id/userIdInput"
        android:hint="Enter your User ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:padding="12dp" />

    <Button
        android:id="@+id/bindUserBtn"
        android:text="Bind Account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp" />

    <!-- ðŸ”„ Task controls -->
    <Button
        android:id="@+id/fetchBtn"
        android:text="Fetch SMS Tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/sendBtn"
        android:text="Send Selected SMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/selectAllBtn"
        android:text="Select / Deselect All"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/retryBtn"
        android:text="Retry Failed SMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/smsCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“© 0 SMS loaded"
        android:layout_marginTop="20dp"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp" />
</LinearLayout>